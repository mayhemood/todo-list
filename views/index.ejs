<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles.css">
  <title>To-Do List</title>
</head>
<body>
  <div class="container">
    <h1>To-Do List</h1>
    <div id="task-list">
      <ul>
        <% tasks.forEach((task, index) => { %>
          <li>
            <span><%= task %></span>
            <div>
              <a href="/editTask/<%= index %>">Edit</a>
              <a href="/deleteTask/<%= index %>">Delete</a>
            </div>
          </li>
        <% }); %>
      </ul>
    </div>
    <div class="add-task">
      <form action="/addTask" method="post">
        <input type="text" class="new-task-input" name="task" placeholder="" onfocus="hidePenAnimation()">
        <button type="submit">Add</button>
      </form>
    </div>
  </div>

  <script>
    function hidePenAnimation() {
      var inputField = document.querySelector('.new-task-input');
      inputField.style.backgroundImage = 'none';
    }
  </script>
</body>
</html>

